{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./",
    "downlevelIteration": true,
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "jest"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": ["packages/**/src/**/*"],
  "exclude": ["node_modules", "packages/**/node_modules", "**/__tests__/**", "*.test.js", "*.test.ts", "*.test.tsx"]
}
